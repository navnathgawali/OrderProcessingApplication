@model IEnumerable<OrderProcessingApplication.Models.ViewModels.PaymentDetailsViewModel>

@{
    ViewBag.Title = "Order Payment Details";
}

<h2>Order Payment Details</h2>

<p>
    @Html.ActionLink("Create New", "Index")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Order Id")
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PaymentItem)
        <th>
            @Html.DisplayNameFor(model => model.IsActiveMembership)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsUpgradeMembership)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ApplicableAgentCommision)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsActivationUpgradeEmailSent)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PaymentItem)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsActiveMembership)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsUpgradeMembership)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ApplicableAgentCommision)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsActivationUpgradeEmailSent)
            </td>
            <td>
                @Html.ActionLink("Get details", "GetShipmentOrderDetails", new { orderId = item.Id })
            </td>
        </tr>
    }
</table>

<div>
    @if (Model.Count() == 0)
    {
        <p style="text-align:center;">No records found</p>
    }
</div>